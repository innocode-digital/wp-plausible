{
  "name": "innstats",
  "version": "1.0.0",
  "description": "Collects statistics through Plausible and shows analytics in admin panel. Also, provides API for developers to retrieve data.",
  "main": "index.js",
  "scripts": {
    "build:utils": "uglifyjs ./public/js/utils.js -c -m -o ./public/js/utils.min.js",
    "build:api": "uglifyjs ./public/js/api.js -c -m -o ./public/js/api.min.js",
    "build:charts": "uglifyjs ./public/js/charts.js -c -m -o ./public/js/charts.min.js",
    "build:advert": "uglifyjs ./public/js/advert.js -c -m -o ./public/js/advert.min.js",
    "build:providers": "uglifyjs ./public/js/providers/plausible.js -c -m -o ./public/js/providers/plausible.min.js",
    "build:main": "uglifyjs ./public/js/main.js -c -m -o ./public/js/main.min.js",
    "build:pages:dashboard": "uglifyjs ./public/js/pages/dashboard.js -c -m -o ./public/js/pages/dashboard.min.js",
    "build:pages:goals": "uglifyjs ./public/js/pages/goals.js -c -m -o ./public/js/pages/goals.min.js",
    "build:pages": "npm run build:pages:dashboard && npm run build:pages:goals",
    "build:css:pages:dashboard": "postcss ./public/css/pages/dashboard.css -o ./public/css/pages/dashboard.min.css",
    "build:css:pages:goals": "postcss ./public/css/pages/goals.css -o ./public/css/pages/goals.min.css",
    "build:css:pages": "npm run build:css:pages:dashboard && npm run build:css:pages:goals",
    "build": "npm run build:utils && npm run build:api && npm run build:charts && npm run build:advert && npm run build:providers && npm run build:main && npm run build:pages && npm run build:css:pages",
    "lint": "eslint './public/js/**/*.js'",
    "lint:fix": "eslint './public/js/**/*.js' --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/innocode-digital/innstats.git"
  },
  "keywords": [
    "wordpress",
    "statistics",
    "analytics",
    "plugin",
    "plausible"
  ],
  "author": {
    "name": "Innocode",
    "email": "post@innocode.no",
    "homepage": "https://innocode.com/"
  },
  "contributors": [
    {
      "name": "Viktor Kuliebiakin",
      "email": "kuliebiakin@gmail.com"
    }
  ],
  "license": "GPL-2.0-or-later",
  "bugs": {
    "url": "https://github.com/innocode-digital/innstats/issues"
  },
  "homepage": "https://github.com/innocode-digital/innstats#readme",
  "devDependencies": {
    "cssnano": "^5.1.15",
    "eslint": "^8.34.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "postcss": "^8.4.21",
    "postcss-cli": "^10.1.0",
    "prettier": "2.8.4",
    "uglify-js": "^3.17.4"
  }
}
